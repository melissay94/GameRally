<form action="/signup" method="POST">
  <div class="form-group row">
    <label for="authEmail" class="form-label col-form-label col-lg-3">Email</label>
    <div class="col-lg-9">
      <input id="authEmail" class="form-control" type="email" name="email">
    </div>
  </div>

  <div class="form-group row">
    <label for="firstName" class="form-label col-form-label col-lg-3">First Name</label>
    <div class="col-lg-9">
      <input id="firstName" class="form-control" type="text" name="firstName">
    </div>
  </div>

  <div class="form-group row">
    <label for="lastName" class="form-label col-form-label col-lg-3">Last Name</label>
    <div class="col-lg-9">
      <input id="lastName" class="form-control" type="text" name="lastName">
    </div>
  </div>

  <div class="form-group row">
    <label for="authPassword" class="form-label col-form-label col-lg-3">Password</label>
    <div class="col-lg-9">
      <input id="authPassword" class="form-control" type="password" name="password" aria-describedby="passwordHelp">
      <small id="passwordHelp" class="form-text text-muted">Passwords need to be at least 12 characters long and include an uppercase letter, a lowercase letter, and a number.</small>
    </div>
  </div>

  <div class="form-group row">
    <label for="confirmPassword" class="form-label col-form-label col-lg-3">Confirm</label>
    <div class="col-lg-9">
      <input id="confirmPassword" class="form-control" type="password" name="confirm">
    </div>
  </div>
  <div class="form-group row modal-button">
    <div class="col-lg-3"></div>
    <button type="button" class="btn btn-link col-lg-6 login-link" data-toggle="modal" data-target="#loginModal">
        Already registered? Login.
      </button>
    <input class="btn btn-dark col-lg-3" type="submit">
  </div>
</form>
