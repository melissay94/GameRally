<div class="breadcrumbs">
    <a class="a-link" href="/group">< Groups</a>
    <a class="a-link" href="/group/<%= groupId %>">< <%= group.name %></a>
</div>
<h3 class="subheading h-size-1">New Event</h3>
<form method="POST" action="/event/new/<%= groupId %>">
    <div class="form-group row">
        <label for="eventTime" class="form-label col-form-label col-2">Event Date and Time</label>
        <div class="col-10">
            <input type="datetime-local" class="form-control" id="eventTime" name="dateTime"/>
        </div>
    </div>
    <div class="form-group row">
        <label for="eventName" class="form-label col-form-label col-2">Event Name</label>
        <div class="col-10">
            <input type="text" class="form-control" id="eventName" name="name" />
        </div>
    </div>
    <div class="form-group row">
        <label for="eventDescription" class="form-label col-form-label col-2">Event Description</label>
        <div class="col-10">
            <textarea type="text" class="form-control" id="eventDescription" name="description" rows="5"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label for="eventLocation" class="form-label col-form-label col-2">Event Location</label>
        <div class="col-10">
            <input type="text" class="form-control" id="eventLocation" name="location" />
        </div>
    </div>
    <div class="form-group row">
        <label for="isVirtual" class="form-label col-form-label col-2">Is it a Virtual Event?</label>
        <div class="form-check col-1">
            <input class="form-check-input" type="radio" name="isVirtual" id="yes" value="true"/>
            <label class="form-label form-check-label" for="yes">Yes</label>
        </div>
        <div class="form-check col-1">
            <input class="form-check-input" type="radio" name="isVirtual" id="no" value="false"/>
            <label class="form-label form-check-label" for="no">No</label>
        </div>
    </div>
    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <button type="submit" class="btn btn-dark">Create Event</button>
        </div>
    </div>
</form>